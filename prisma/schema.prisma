generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  uuid            String            @id
  username        String            @unique
  password        String
  roles           Role              @default(SUPERADMIN)
  full_name       String
  PengambilanObat PengambilanObat[]
  TPoli           TPoli[]
  @@map("user")
}

model Poli {
  poli_id   BigInt    @id @default(autoincrement())
  poli_name String
  Pasien    Pasien[]
  TPoli     TPoli[]

  @@map("poli")
}

model Pasien {
  pasien_id           BigInt   @id @default(autoincrement())
  nomor_bpjs          String
  nama_passien        String
  tanggal_lahir       DateTime
  alamat              String
  faskes_tingkat_satu String
  poli                Poli     @relation(fields: [poli_id], references: [poli_id])
  poli_id             BigInt
  Resep               Resep[]

  @@map("pasien")
}

model Resep {
  resep_id         BigInt            @id @default(autoincrement())
  pasien           Pasien            @relation(fields: [pasien_id], references: [pasien_id])
  pasien_id        BigInt
  tanggal_resep    DateTime
  keterangen_Resep String
  hasil_diagnosa   String
  PengambilanObat  PengambilanObat[]

  @@map("resep")
}

model PengambilanObat {
  id       Int    @id @default(autoincrement())
  resep    Resep  @relation(fields: [resep_id], references: [resep_id])
  resep_id BigInt
  user     User   @relation(fields: [user_id], references: [uuid])
  user_id  String

  @@map("pengambilan_obat")
}

model Antrian {
  id      Int    @id @default(autoincrement())
  poli    TPoli  @relation(fields: [poli_id], references: [id])
  poli_id BigInt
  status  Status
  @@map("antrian")
}

model TPoli {
  id      BigInt @id @default(autoincrement())
  poli    Poli   @relation(fields: [poli_id], references: [poli_id])
  poli_id BigInt
  user    User   @relation(fields: [user_id], references: [uuid])
  user_id String
  status  Status
  Antrian Antrian[]

  @@map("t_poli")
}

enum Role {
  SUPERADMIN
  RESEPSIONIS
  DOKTER
  APOTEKER
}

enum Status {
  WAITING
  CHECKING
  PICKUP
  DONE
}
